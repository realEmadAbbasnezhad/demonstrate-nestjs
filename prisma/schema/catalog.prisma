generator client {
  provider      = "prisma-client-js"
  output        = "../generated/catalog"
  moduleFormat  = "cjs"
  engineType    = "binary"
  binaryTargets = ["native"]
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URL")
}

model Product {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  slug        String @unique
  description String
  price       Int
  stockCount  Int    @default(0)

  category String
  tags     String[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@index([category])
  @@map("products")
}
